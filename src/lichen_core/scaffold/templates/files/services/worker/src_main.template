async def publish_loop():
    print("[worker] entered piblish_loop")
    nc = NATS()
    while True:
        try:
            print("[worker] â³ connecting to NATS...")
            await nc.connect("nats://nats:4222")
            print("[worker] âœ… connected to NATS")
            break
        except Exception as e:
            print(f"[worker] âŒ NATS not ready, retrying in 2s... ({e})")
            await asyncio.sleep(2)


    i = 0
    while True:
        msg = f"tick {i}"
        await nc.publish("lichenevents", msg.encode())
        print(f"[worker] published: {msg}")
        i += 1
        await asyncio.sleep(3)