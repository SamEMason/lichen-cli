@asynccontextmanager
async def lifespan(app: FastAPI):
    print("[worker] ğŸŒ€ lifespan started")

    # Start a task that contains retry logic
    task = asyncio.create_task(publish_loop())
    try:
        yield
    finally:
        print("[worker] ğŸ”¥ lifespan shutting down")
        task.cancel()
        try:
            await task
        except asyncio.CancelledError:
            print("[worker] ğŸ›‘ task cancelled cleanly")



app = FastAPI(lifespan=lifespan)
